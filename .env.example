# ServerAlert default configuration
# Adjust these values per host. Any variable omitted falls back to the defaults baked into serveralert.py

# Thresholds
CPU_THRESHOLD=50
MEMORY_THRESHOLD=50
DISK_THRESHOLD=80
LOAD_AVG_THRESHOLD=5.0
CONNECTION_THRESHOLD=1000
PROCESS_THRESHOLD=500

# Scheduling
CHECK_INTERVAL_SECONDS=300
ALERT_MIN_INTERVAL=120
REQUEST_TIMEOUT_SECONDS=5
REQUEST_MAX_RETRIES=3

# File monitoring
FILE_HASH_MAX_MB=5
FILE_HASH_CHUNK_SIZE=65536

# Health endpoint
HEALTH_SERVER_ENABLED=true
HEALTH_SERVER_HOST=127.0.0.1
HEALTH_SERVER_PORT=8765

# Detection toggles
DETECT_RESOURCES=true
DETECT_NETWORK_LOAD=true
DETECT_CRITICAL_SERVICES=true
DETECT_SERVICE_STATUS=true
DETECT_SERVICE_CHANGES=true
DETECT_LOG_MONITOR=true
DETECT_FILE_MONITOR=true
DETECT_DB_BACKUP=true
DETECT_HEALTH_SERVER=true

# Resource detection toggles
DETECT_CPU=true
DETECT_MEMORY=true
DETECT_DISK=true
DETECT_PROCESS_COUNT=true
DETECT_CONNECTIONS=true
DETECT_LOAD_AVG=true

# Log detection toggles
DETECT_SSH_LOGIN=true
DETECT_SSH_FAILED=true
DETECT_SUDO=true
DETECT_PRIVILEGE=true
DETECT_PASSWORD_CHANGE=true
DETECT_KERNEL=true
DETECT_FIREWALL=true

# File monitor toggles
DETECT_FILE_CHANGES=true

# GeoIP cache
GEOIP_LOOKUP_ENABLED=true
GEOIP_CACHE_TTL=3600

# Database configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASS=change-me
DB_BACKUP_INTERVAL_MINUTES=30

# Monitored services/directories (comma-separated)
MONITORED_SERVICES=apache2,mariadb,ssh
MONITORED_DIRECTORIES=/etc,/usr/bin,/usr/sbin,/bin,/sbin,/var/www

# Embed styling
EMBED_TITLE_PREFIX=ServerAlert
EMBED_FOOTER_TEXT=ServerAlert
EMBED_SEPARATOR=------------------------------
# Optional stock images for embeds
EMBED_THUMB_URL=
EMBED_IMAGE_URL=
EMBED_IMAGE_WARNING_URL=
EMBED_SHOW_TOP_PROCESSES=true
ALERT_PING_EVERYONE=true

# Discord webhooks per alert area
WEBHOOK_DB=
WEBHOOK_DEFAULT=
WEBHOOK_RESOURCE=
WEBHOOK_SERVICE_STATUS=
WEBHOOK_SERVICE_CHANGE=
WEBHOOK_FILE_MONITOR=
WEBHOOK_SSH_SUCCESS=
WEBHOOK_SSH_FAILED=
WEBHOOK_SUDO=
WEBHOOK_PRIVILEGE=
WEBHOOK_PASSWORD=
WEBHOOK_KERNEL=
